{
	"extends": "tsconfig-moon/tsconfig.projects.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"strict": true,
		"allowJs": true,
		"lib": ["esnext", "dom"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "es2022",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"incremental": true,
		"noEmit": false,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": false
	}
}
